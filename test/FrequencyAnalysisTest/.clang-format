# Generated by CLion for K&R braces
# The K&R style, also known as Kernighan and Ritchie style, is a common coding style named after the authors of "The C Programming Language."
# In this style, the opening brace is placed on the same line as the control statement, and the closing brace is on its own line.

# K&R style: opening brace stays on the same line, closing brace on a new line
BasedOnStyle: LLVM

# Indentation settings
IndentWidth: 4
TabWidth: 4
UseTab: Never

# Brace placement configuration
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false

# Formatting behavior
AllowShortFunctionsOnASingleLine: Empty
NamespaceIndentation: All
IndentCaseLabels: true
PointerAlignment: Left
SortIncludes: true
IncludeBlocks: Preserve
AlignAfterOpenBracket: Align
SpacesInAngles: false
SpaceBeforeParens: Never
MaxEmptyLinesToKeep: 2
BinPackParameters: true
BinPackArguments: true

ColumnLimit: 0